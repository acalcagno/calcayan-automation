<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Panel de Control - calcayan automation</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Calcayan automation</h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="#">Configuracion</a>
        <a class="p-2 text-dark" href="#">Control</a>
        <a class="p-2 text-dark" href="#">Historico</a>
    </nav>
    <!--<a class="btn btn-outline-primary" href="#">Sign up</a>-->
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Control del sistema</h1>
    <p class="lead">Tome el control manual del sistema de fermentacion y madurado</p>
</div>

<div class="container">
    <div class="card-deck mb-3 text-center ">
        <%
            var cant_dispositivos_renderizados = 0;
            for(var i=0; i < dispositivos.length; i++) {
            var dispo = dispositivos[i];
            var manual = dispositivos[i].control == "manual";

            if(["chiller",
                        "bomba_chiller",
                        "calentador",
                        "bomba_calentador",
                        "electrovalvula_frio_fermentador_1",
                        "electrovalvula_frio_fermentador_2",
                        "electrovalvula_frio_fermentador_3"
                    ].includes(dispo.dispositivo)) {
                cant_dispositivos_renderizados++;
                var estado = dispo.accion.replace("apagar", "Apagado").replace("encender", "Encendido").replace("abrir", "Abierta").replace("cerrar", "Cerrada");%>

                <div class="card <% if(manual) {%> <%='border-success mb-3'%><%} else {%><%='mb-4 box-shadow'%><%}%>">
                    <form action="control" method="post">
                        <input type="hidden" name="dispositivo" value="<%=dispo.dispositivo%>"/>
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal"><%=dispo.dispositivo.replace("electrovalvula","ev")%></h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title"><%=estado %> <small class="text-muted"><br><%=dispo.control%></small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Ha estado <%=estado.toLowerCase()%> por xx:xx horas</li>
                            <%if (dispo.temp_ideal != undefined) { %>
                                <li>Esta configurado en <%=dispo.temp_ideal%>ºc &plusmn; <%=dispo.tolerancia%>ºc</li>
                                <li>Su temperatura actual es de xºc.</li>
                            <% }%>
                            <%
                            var medicion_sensor;
                            var fermentador_correspondiente = "fermentador" + dispo.dispositivo.substring(dispo.dispositivo.length -1 , dispo.dispositivo.length );
                            if (dispo.dispositivo.substring(0,14) == "electrovalvula") { %>
                                <li>La ultima medicion del sensor <%=fermentador_correspondiente%> es:
                                    <% medicion_sensor = dispositivos.filter(function(each) {
                                        return each.dispositivo == fermentador_correspondiente;
                                        })[0].temperatura %>
                                <%=medicion_sensor%>ºc
                                </li>
                            <% } %>
                        </ul>
                        <%if (manual) {
                            if (dispo.dispositivo.substring(0,14) != "electrovalvula") {%>
                                <div>
                                    <button type="submit" name="accion" value="encender" class="btn btn-primary" <% if(estado == "Encendido") {%><%='disabled'%><%}%>>Encender</button>
                                    <button type="submit" name="accion" value="apagar" class="btn btn-secondary"<% if(estado == "Apagado") {%><%='disabled'%><%}%>>Apagar</button>
                                    <br>
                                    <br>
                                </div>
                            <% } else { %>
                                <div>
                                    <button type="submit" name="accion" value="abrir" class="btn btn-primary" <% if(estado == "Abierta") {%><%='disabled'%><%}%>>Abrir</button>
                                    <button type="submit" name="accion" value="cerrar" class="btn btn-secondary"<% if(estado == "Cerrada") {%><%='disabled'%><%}%>>Cerrar</button>
                                    <br>
                                    <br>
                                </div>
                            <% } %>
                        <button type="submit" name="accion" value="get_auto" class="btn btn-lg btn-block btn-outline-primary">Ceder Control Manual</button>
                        <% } else { %>
                            <button type="submit" name="accion" value="get_manual" class="btn btn-lg btn-block btn-primary">Controlar Manualmente</button>
                        <% } %>
                    </div>
                    </form>
                </div>

                <%
                } if(cant_dispositivos_renderizados == 3) {
                    cant_dispositivos_renderizados = 0;%>
                    </div>
                    <div class="card-deck mb-3 text-center">
                <% }
                }
            %>
    </div>


    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-12 col-md">
                <img class="mb-2" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
                <small class="d-block mb-3 text-muted">&copy; 2017-2018</small>
            </div>
            <div class="col-6 col-md">
                <h5>Features</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Cool stuff</a></li>
                    <li><a class="text-muted" href="#">Random feature</a></li>
                    <li><a class="text-muted" href="#">Team feature</a></li>
                    <li><a class="text-muted" href="#">Stuff for developers</a></li>
                    <li><a class="text-muted" href="#">Another one</a></li>
                    <li><a class="text-muted" href="#">Last time</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Resources</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Resource</a></li>
                    <li><a class="text-muted" href="#">Resource name</a></li>
                    <li><a class="text-muted" href="#">Another resource</a></li>
                    <li><a class="text-muted" href="#">Final resource</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>About</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="text-muted" href="#">Team</a></li>
                    <li><a class="text-muted" href="#">Locations</a></li>
                    <li><a class="text-muted" href="#">Privacy</a></li>
                    <li><a class="text-muted" href="#">Terms</a></li>
                </ul>
            </div>
        </div>
    </footer>
</div>


